



<div class="container">
  <div class="row">
    <div class="col-sm">
      <%= turbo_stream_from dom_id @game %>
      <%= turbo_frame_tag dom_id @game do %>
        <%= render @players %>
      <% end %>
    </div>
    <div class="col-sm">
      <% if current_user.player.winner %>
          <h2>WINNER</h2>
      <%else %>
        <%= render 'kaboom', id: current_user.player.id %>
      <% end %>
    </div>
    <div class="col-sm">
      <% if @game_owner %>
        <%= render 'delete_game' %>
      <% end %>
    </div>
  </div>
</div>