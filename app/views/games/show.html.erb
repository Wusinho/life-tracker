<div class="p-2">
  <div class="row">
    <div class="col">
      <%= turbo_stream_from dom_id @game %>
        <%= turbo_frame_tag dom_id @game do %>
          <% @players.each do |player| %>
            <div class="d-flex align-items-center">
              <%= render 'players/player', player:player %>
              <%= damage_to_enemies player, current_user %>
            </div>
          <% end %>
        <% end %>
    </div>
    <div class="col">
      <%= render 'kaboom', id: current_user.player.id %>
    </div>
    <div class="col">
      <%= render 'delete_game' if @game_owner%>
    </div>
  </div>
</div>