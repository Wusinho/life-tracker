
  <% if @game_owner %>
  <%= button_to 'delete',
            { controller: "games", action: "destroy", id: @game.id },
            data: { confirm: 'Are you sure?' },
            method: :delete,
            class: red_btn %>
  <% end %>

  <%= link_to '', data: {
                        controller: 'players',
                        player_id: current_user.id,
                        action: 'players#kaboom'
  } do %>
    <i class="fa-solid fa-meteor"></i>
  <% end %>

<div id='players'>
  <% @players.each do |player| %>
    <div data-controller="players" data-player-id="<%= player.id %>">
      <%= render 'player', player: player %>
    </div>
  <% end %>
</div>
