

<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title"> <%= user.nickname %></h5>
    <p class="card-text">AoE: <%=user.aoe %></p>

    <p class="card-text">Heal: <%=user.heal %></p>
    <p class="card-text">Wins: <%=user.wins %></p>
    <p class="card-text">Total_games: <%= user.total_games %></p>
    <p class="card-text">Total damage: <%= user.total_damage %></p>
    <p class="card-text">No of Killed players <%= user.no_kills %></p>

    <% if user.death_players.present? %>

      <% user.death_players.each do |deceased| %>
        <p>name: <%= deceased[:nickname] %></p>
        <p>deads: <%= deceased[:deaths] %> </p>
      <% end %>
    <% end %>
  </div>
</div>