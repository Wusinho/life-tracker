
<%= turbo_stream_from 'houses' %>

<%= turbo_frame_tag 'houses' do %>

  <% if current_user.house.present? %>
    <%= render @house %>
  <% end %>

<% end %>

    <% if @house %>
      <%= turbo_frame_tag 'house_form' do %>
        <%= render 'edit_drop_down', house: @house %>
      <% end %>

      <% if @house.games.blank? %>
          <%= render 'games/form', house: @house %>
      <% else %>
        <%=link_to @house.name, game_path(@game) %>
      <% end %>

    <% else %>
      <%= turbo_frame_tag 'house_form' do %>
         <%= render 'form', house: @new_house %>
      <% end %>

    <% end %>



<%= turbo_frame_tag 'game' do %>
  

<% end %>
